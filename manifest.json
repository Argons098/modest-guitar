{
    "name": "Modest Guitar",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Multiple columns for viewing Ultimate-Guitar tabs",
    "homepage_url": "https://www.linkedin.com/in/ingman/",
    "content_scripts": [
      {
        "matches": ["*://*.ultimate-guitar.com/*"],
        "js": ["contentScript.js"],
        "all_frames": true
      }
    ],
    "browser_action": {
      "default_title": "Modest Guitar",
      "default_popup": "popup.html"
    }, 
    "permissions": [
      "storage",
      "activeTab"
    ],
    "icons": { 
      "16": "icons/16.png",
      "48": "icons/48.png",
     "128": "icons/128.png" 
    }
  }